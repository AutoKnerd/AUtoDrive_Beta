rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function hasAnyRole(roles) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in roles;
    }

    function isManager() {
      return hasAnyRole([
        'Admin', 'Developer', 'Owner', 'Trainer', 'General Manager',
        'manager', 'Service Manager', 'Parts Manager', 'Finance Manager'
      ]);
    }

    function userPath(uid) {
      return /databases/$(database)/documents/users/$(uid);
    }

    function userExists(uid) {
      return exists(userPath(uid));
    }

    function userDoc(uid) {
      return get(userPath(uid)).data;
    }

    function sharesDealership(aUid, bUid) {
      return userExists(aUid)
        && userExists(bUid)
        && userDoc(aUid).dealershipIds != null
        && userDoc(bUid).dealershipIds != null
        && userDoc(aUid).dealershipIds.hasAny(userDoc(bUid).dealershipIds);
    }

    function isPrivatelyHiddenFrom(uid, viewerRole) {
      return (
        (viewerRole == 'Owner' && userDoc(uid).isPrivateFromOwner == true)
        || (viewerRole != 'Owner' && userDoc(uid).isPrivate == true)
      );
    }

    function canViewPerformance(targetUserId) {
      return isSignedIn()
        && userExists(request.auth.uid)
        && userExists(targetUserId)
        && (
          (userDoc(request.auth.uid).role in ['Admin', 'Developer', 'Trainer'])
          || (
            userDoc(request.auth.uid).role == 'Owner'
            && !isPrivatelyHiddenFrom(targetUserId, 'Owner')
            && sharesDealership(request.auth.uid, targetUserId)
          )
          || (
            userDoc(request.auth.uid).role in ['General Manager', 'manager', 'Service Manager', 'Parts Manager', 'Finance Manager']
            && !isPrivatelyHiddenFrom(targetUserId, userDoc(request.auth.uid).role)
            && sharesDealership(request.auth.uid, targetUserId)
          )
        );
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || canViewPerformance(userId);
      allow list: if isManager();
      allow create: if request.auth.uid == userId
        && request.resource.data.userId == userId
        && request.resource.data.subscriptionStatus in ['inactive', 'active'];
      allow update: if 
        (!('userId' in request.resource.data) || request.resource.data.userId == resource.data.userId) &&
        (
          (isOwner(userId) && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role)) || 
          hasAnyRole(['Admin', 'Developer'])
        );
      allow delete: if isOwner(userId) || hasAnyRole(['Admin', 'Developer']);
    }

    match /lessons/{lessonId} {
      allow read: if isSignedIn();
      allow create: if isManager();
      allow update, delete: if false;
    }

    match /users/{userId}/lessonLogs/{lessonLogId} {
      allow get, list: if isOwner(userId) || canViewPerformance(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isManager();
    }

    match /users/{userId}/earnedBadges/{badgeId} {
      allow get, list: if isOwner(userId) || canViewPerformance(userId);
      allow create: if isOwner(userId);
      allow update: if false;
      allow delete: if hasAnyRole(['Admin', 'Developer']);
    }

    match /lessonAssignments/{assignmentId} {
      allow read: if isOwner(resource.data.userId) || isManager();
      allow create: if isManager();
      allow update: if isOwner(resource.data.userId) || isManager();
      allow delete: if isManager();
    }

    match /emailInvitations/{invitationId} {
      allow create: if isSignedIn();
      allow read, update, delete: if false;
    }

    match /dealerships/{dealershipId} {
      allow read: if true;
      allow create: if false;
      allow update, delete: if hasAnyRole(['Admin', 'Developer']);
    }
  }
}
